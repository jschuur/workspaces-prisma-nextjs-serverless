{
  "name": "yarn-workspaces-prisma-nextjs-serverless",
  "private": true,
  "packageManager": "yarn@3.2.2",
  "workspaces": [
    "packages/*",
    "apps/*",
    "services/*"
  ],
  "scripts": {
    "dev": "yarn workspace site dev",
    "link:cli": "yarn workspace cli link",
    "deploy:sls": "yarn workspace backend run deploy",
    "build:site": "yarn workspace site run build",
    "deploy:site": "yarn workspace site run deploy",
    "prisma:generate": "yarn workspace @monorepo-test/prisma generate"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "babel-loader": "^8.2.5",
    "babel-loader-exclude-node-modules-except": "^1.2.1",
    "copy-webpack-plugin": "^11.0.0",
    "dotenv-cli": "^6.0.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jsonfile": "^6.1.0",
    "prisma": "^4.1.1",
    "serverless-dotenv-plugin": "^4.0.2",
    "serverless-offline": "^9.1.6",
    "serverless-webpack": "^5.8.0",
    "serverless-webpack-prisma": "^1.1.0",
    "terser-webpack-plugin": "^5.3.3",
    "webpack-node-externals": "^3.0.0",
    "webpack-node-module-types": "^1.2.2"
  }
}
